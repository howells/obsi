{
	"name": "@howells/obsi",
	"version": "1.4.0",
	"description": "Interactive Obsidian vault CLI with TUI and Claude Code integration",
	"type": "module",
	"bin": {
		"obsi": "./bin/obsi"
	},
	"files": [
		"bin",
		"src",
		"package.json",
		"README.md"
	],
	"scripts": {
		"dev": "bun run src/index.tsx",
		"link": "bun link",
		"build": "tsc",
		"typecheck": "tsc --noEmit",
		"lint": "biome check --write . && ultracite fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"prepare": "husky"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"biome check --write",
			"ultracite fix"
		],
		"*.{js,json}": [
			"biome check --write"
		]
	},
	"keywords": [
		"obsidian",
		"notes",
		"vault",
		"tui",
		"claude-code",
		"cli"
	],
	"author": "Daniel Howells",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/howells/obsi.git"
	},
	"homepage": "https://github.com/howells/obsi",
	"dependencies": {
		"@inkjs/ui": "^2.0.0",
		"fuse.js": "^7.1.0",
		"ink": "^6.6.0",
		"react": "^19.2.3"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@types/node": "^25.0.9",
		"@types/react": "^19.2.8",
		"@vitest/ui": "^4.0.17",
		"husky": "^9.1.7",
		"ink-testing-library": "^4.0.0",
		"lint-staged": "^16.2.7",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"ultracite": "^7.0.11",
		"vitest": "^4.0.17"
	}
}
